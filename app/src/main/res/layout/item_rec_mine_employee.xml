<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_mine_employee_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/tab_height"
        android:layout_weight="1"
        android:gravity="left|start|center"
        android:paddingLeft="@dimen/padding_left_right"
        android:text="奥特曼"
        android:textSize="@dimen/primary_text"/>

    <TextView
        android:id="@+id/txt_mine_employee_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/tab_height"
        android:layout_weight="1"
        android:gravity="right|end|center"
        android:paddingRight="@dimen/padding_left_right"
        android:text="喵喵喵"
        android:textSize="@dimen/primary_text"/>
</LinearLayout>