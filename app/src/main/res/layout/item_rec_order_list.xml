<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:background="@color/bg_background"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_height_bottom"
        android:paddingLeft="@dimen/padding_left_right"
        android:paddingRight="@dimen/padding_left_right"
        android:paddingTop="@dimen/padding_height_bottom"

        >

        <TextView
            android:id="@+id/txt_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="捏100个泥人"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/secondary_text"/>

        <TextView
            android:id="@+id/txt_order_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_order_title"
            android:layout_marginTop="8dp"
            android:text="奥特曼公司"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/secondary_text"/>

        <TextView
            android:id="@+id/txt_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/txt_order_custom"
            android:layout_below="@id/txt_order_title"
            android:text="订单号:12985y"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/secondary_text"/>

        <TextView
            android:id="@+id/txt_order_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_order_id"
            android:layout_marginTop="8dp"
            android:text="10%"/>

        <ProgressBar
            android:id="@+id/progress_order"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/txt_order_capacity"
            android:max="100"
            android:progress="99"
            android:progressDrawable="@drawable/bg_progress"/>

        <TextView
            android:id="@+id/txt_order_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/progress_order"
            android:layout_marginTop="5dp"
            android:text="2017-07-12"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/ternary_text"/>

        <TextView
            android:id="@+id/txt_order_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/txt_order_create_time"
            android:text="2017-7-21"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/ternary_text"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
