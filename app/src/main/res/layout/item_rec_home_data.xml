<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_home_order_left_right"
    android:layout_marginRight="@dimen/margin_home_order_left_right"
    android:layout_marginTop="@dimen/margin_home_order_item_top_bottom"
    android:paddingBottom="@dimen/margin_home_order_item_top_bottom"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/margin_home_order_item_top_bottom"
        android:paddingTop="@dimen/margin_home_order_item_top_bottom">

        <TextView
            android:id="@+id/txt_home_order_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingLeft="@dimen/margin_home_order_left_right"
            android:paddingRight="@dimen/margin_home_order_left_right"
            android:text="奥特曼集团"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/secondary_text"/>

        <TextView
            android:id="@+id/txt_home_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/margin_home_order_left_right"
            android:paddingRight="@dimen/margin_home_order_left_right"
            android:text="订单号:31231312"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/secondary_text"/>

        <TextView
            android:id="@+id/txt_home_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_home_order_description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:paddingLeft="@dimen/margin_home_order_left_right"
            android:paddingRight="@dimen/margin_home_order_left_right"
            android:text="生产奥特曼100个"
            android:textColor="@color/primary_text"
            android:textSize="21sp"/>

        <TextView
            android:id="@+id/txt_home_center_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_home_order_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_home_order_item_top_bottom"
            android:text="生产中"
            android:textColor="@color/accent"
            android:textSize="@dimen/primary_text"/>

        <TextView
            android:id="@+id/txt_home_order_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_home_center_title"
            android:layout_marginTop="@dimen/margin_home_order_item_top_bottom"
            android:paddingLeft="@dimen/margin_home_order_left_right"
            android:paddingRight="@dimen/margin_home_order_left_right"
            android:text="2017-7-12"/>


        <TextView
            android:id="@+id/txt_home_order_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_home_center_title"
            android:layout_marginTop="@dimen/margin_home_order_item_top_bottom"
            android:paddingLeft="@dimen/margin_home_order_left_right"
            android:paddingRight="@dimen/margin_home_order_left_right"
            android:text="2019-2-4"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/txt_home_center_title"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="29dp"
            android:layout_toLeftOf="@id/txt_home_order_end_time"
            android:layout_toRightOf="@id/txt_home_order_create_time"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/txt_home_order_data_center_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_data_procedure_height"
            android:layout_below="@id/txt_home_order_create_time"
            android:layout_marginTop="@dimen/margin_home_order_item_top_bottom"
            android:background="@color/primary_dark"
            android:gravity="center"
            android:text="-各项数据-"
            android:textColor="@color/accent"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_home_data_procedure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_home_order_data_center_title"
            android:layout_marginTop="@dimen/margin_home_order_item_top_bottom"
            android:paddingLeft="@dimen/margin_home_order_left_right"
            android:paddingRight="@dimen/margin_home_order_left_right">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</android.support.v7.widget.CardView>